@model Groepsreizen_team_tet.ViewModels.ReviewViewModels.ReviewViewModel

@{
    ViewBag.Title = "Review Geven";
}

<h2>Review Geven voor Groepsreis</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Score">Geef een score (1-5)</label>
        <select asp-for="Score" class="form-control" required>
            <option value="">Selecteer een score</option>
            @for (int i = 1; i <= 5; i++)
            {
                <option value="@i">@i</option>
            }
        </select>
        <span asp-validation-for="Score" class="text-danger"></span>
    </div>
    <div class="form-group mt-3">
        <label asp-for="Opmerking">Opmerking (optioneel)</label>
        <textarea asp-for="Opmerking" class="form-control"></textarea>
        <span asp-validation-for="Opmerking" class="text-danger"></span>
    </div>
    <input type="hidden" asp-for="GroepsreisId" />
    <button type="submit" class="btn btn-darkblue mt-3">Review geven</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}




