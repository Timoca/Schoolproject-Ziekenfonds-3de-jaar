@model Groepsreizen_team_tet.ViewModels.MonitorViewModels.EditMonitorViewModel

@{
    ViewData["Title"] = "Monitor Bewerken";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-12">
            <h2>@ViewData["Title"]</h2>
<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

                <!-- Naam en Voornaam -->
                <div class="form-row row mt-3">
                    <div class="form-group col-md-6">
                        <label asp-for="Naam"></label>
                        <input asp-for="Naam" class="form-control" />
                        <span asp-validation-for="Naam" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <label asp-for="Voornaam"></label>
                        <input asp-for="Voornaam" class="form-control" />
                        <span asp-validation-for="Voornaam" class="text-danger"></span>
                    </div>
                </div>

                <!-- Straat en Huisnummer -->
                <div class="form-row row mt-2">
                    <div class="form-group col-md-6">
                        <label asp-for="Straat"></label>
                        <input asp-for="Straat" class="form-control" />
                        <span asp-validation-for="Straat" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <label asp-for="Huisnummer"></label>
                        <input asp-for="Huisnummer" class="form-control" />
                        <span asp-validation-for="Huisnummer" class="text-danger"></span>
                    </div>
                </div>

                <!-- Gemeente en Postcode -->
                <div class="form-row row mt-2">
                    <div class="form-group col-md-6">
                        <label asp-for="Gemeente"></label>
                        <input asp-for="Gemeente" class="form-control" />
                        <span asp-validation-for="Gemeente" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <label asp-for="Postcode"></label>
                        <input asp-for="Postcode" class="form-control" />
                        <span asp-validation-for="Postcode" class="text-danger"></span>
                    </div>
                </div>

                <!-- Geboortedatum en telefoonnummer -->
                <div class="form-row row mt-2">
                    <div class="form-group col-md-6">
                        <label asp-for="Geboortedatum"></label>
                        <input asp-for="Geboortedatum" class="form-control" type="date" />
                        <span asp-validation-for="Geboortedatum" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <label asp-for="Telefoonnummer"></label>
                        <input asp-for="Telefoonnummer" class="form-control" />
                        <span asp-validation-for="Telefoonnummer" class="text-danger"></span>
                    </div>
                </div>

                <!-- Huisdokter -->
                <div class="mt-2">
                    <label asp-for="Huisdokter" class="form-label"></label>
                    <input asp-for="Huisdokter" class="form-control" />
                    <span asp-validation-for="Huisdokter" class="text-danger"></span>
                </div>

                <!-- Contractnummer en Rekeningnummer -->
                <div class="form-row row mt-2">
                    <div class="form-group col-md-6">
                        <label asp-for="ContractNummer" class="form-label"></label>
                        <input asp-for="ContractNummer" class="form-control" />
                        <span asp-validation-for="ContractNummer" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <label asp-for="RekeningNummer" class="form-label"></label>
                        <input asp-for="RekeningNummer" class="form-control" />
                        <span asp-validation-for="RekeningNummer" class="text-danger"></span>
                    </div>
                </div>

                <!-- Rol -->
                <div class="form-group">
                    <label asp-for="SelectedRole" class="form-label"></label>
                    <select asp-for="SelectedRole" class="form-select" asp-items="@(new SelectList(Model.AvailableRoles, Model.SelectedRole))">
                        <option value="">-- Selecteer een rol --</option>
                    </select>
                    <span asp-validation-for="SelectedRole" class="text-danger"></span>
                </div>

                <!-- IsActief -->
                <div class="form-group mt-3">
                    <input asp-for="IsActief" class="form-check-input"/>
                    <label asp-for="IsActief" class="form-check-label"></label>
                    <span asp-validation-for="IsActief" class="text-danger"></span>
                </div>

                <!-- Actieknoppen -->
                <div class="mt-3">
                    <button type="submit" class="btn btn-darkblue">Opslaan</button>
                    <a asp-action="Vorige" class="btn btn-secondary">Annuleren</a>
                </div>
            </form>
        </div>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
