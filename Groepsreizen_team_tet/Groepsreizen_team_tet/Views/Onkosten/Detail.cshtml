@model OnkostenDetailViewModel
@{
    ViewBag.Title = "Onkost " + @Model.Titel;
}

<h2>Onkostendetail: @Model.Titel</h2>

<table class="table table-bordered mt-3">
    <tbody>
        <tr>
            <th>Datum</th>
            <td>@Model.Datum.ToString("dd-MM-yyyy")</td>
        </tr>
        <tr>
            <th>Omschrijving</th>
            <td>@Model.Omschrijving</td>
        </tr>
        <tr>
            <th>Bedrag</th>
            <td>@Model.Bedrag.ToString("C")</td>
        </tr>
        <tr>
            <th>Locatie</th>
            <td>@Model.Locatie</td>
        </tr>
        @if (Model.Betaalbewijs != null)
        {
            <tr>
                <th>Betaalbewijs</th>
                <td>
                    <div class="d-flex align-items-center">
                        <img src="data:image/png;base64,@Convert.ToBase64String(Model.Betaalbewijs)" alt="Betaalbewijs" style="width:200px; height:auto;" />
                    </div>
                </td>
            </tr>
        }
        <tr>
            <th>Acties</th>
            <td>
                <a asp-action="Edit" asp-controller="Onkosten" asp-route-id="@Model.Id" class="btn btn-warning">Bewerken</a>
                <a asp-action="Delete" asp-controller="Onkosten" asp-route-id="@Model.Id" class="btn btn-danger">Verwijderen</a>
            </td>
        </tr>
    </tbody>
</table>

<div class="mt-4">
    <a asp-action="Beheer" asp-controller="Onkosten" asp-route-id="@Model.GroepsreisId" class="btn btn-secondary">Terug naar overzicht</a>
</div>
